{
        "manifest_version": 3,
        "name": "Open WebUI Chat Panel",
        "description": "Chat with your Open WebUI backend from the Chrome side panel.",
        "version": "0.0.1",
        "permissions": ["storage", "sidePanel"],
        "icons": {
                "16": "favicon.png",
                "48": "favicon.png",
                "128": "favicon.png"
        },
        "side_panel": {
                "default_path": "index.html?view=panel"
        },
        "action": {
                "default_title": "Open WebUI Chat",
                "default_popup": "index.html?view=panel"
        },
        "options_page": "index.html?view=options"
}
