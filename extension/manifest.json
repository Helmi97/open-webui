{
  "manifest_version": 3,
  "name": "Open WebUI Side Panel",
  "description": "Chat with your backend from Chrome's side panel.",
  "version": "0.0.1",
  "permissions": ["storage", "sidePanel"],
  "icons": {
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Open WebUI Side Panel"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
